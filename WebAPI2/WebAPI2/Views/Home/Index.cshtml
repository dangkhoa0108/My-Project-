<div class="page-header">
    <h1>Products and Categpries</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Product</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: products">
                    <li>
                        <strong><span data-bind="text: Name"></span></strong>: <span data-bind="text: Price"></span>
                        <!-- New code -->
                        <small><a href="#" data-bind="click: $parent.getProductsDetail">Details</a></small>
                        <small><a href="#" data-bind="click: $parent.editProducts">Edit</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Categories</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: categories">
                    <li>
                        <strong><span data-bind="text: Name"></span></strong>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>




    <div class="col-md-4" data-bind="with:detail">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Detail Product</h2>
            </div>
            <table class="table">
                <tr><td>Id</td><td data-bind="text: Id"></td></tr>
                <tr><td>Name</td><td data-bind="text: Name"></td></tr>
                <tr><td>Price</td><td data-bind="text: Price"></td></tr>
                <tr><td>Category</td><td data-bind="text: CategoryName"></td></tr>
            </table>
        </div>
    </div>
    
    
    
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Edit Products</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit:editProducts">
                    <div class="form-group">
                        <label for="inputCategory" class="col-sm-4 control-label">Category</label>
                        <div class="col-sm-8">
                            <select data-bind="options:categories, optionsText: 'Name', value: editProduct.Category"></select>
                        </div>
                    </div>
                    <div class="form-group" data-bind="with: editProduct">
                        <label for="inputName" class="col-sm-4 control-label">Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputTitle" data-bind="value:Name" placeholder="Name" />
                        </div>
                        <label for="inputPrice" class="col-sm-4 control-label">Price</label>
                        <div class="col-sm-8">
                            <input type="number" step="any" class="form-control" id="inputPrice" data-bind="value:Price" placeholder="0.00" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
    
    
    

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add Products</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addProducts">
                    <div class="form-group">
                        <label for="inputCategory" class="col-sm-4 control-label">Category</label>
                        <div class="col-sm-8">
                            <select data-bind="options:categories, optionsText: 'Name', value: newProduct.Category"></select>
                        </div>
                    </div>

                    <div class="form-group" data-bind="with: newProduct">
                        <label for="inputName" class="col-sm-4 control-label">Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputTitle" data-bind="value:Name" placeholder="Name" />
                        </div>
                        <label for="inputPrice" class="col-sm-4 control-label">Price</label>
                        <div class="col-sm-8">
                            <input type="number" step="any" class="form-control" id="inputPrice" data-bind="value:Price" placeholder="0.00" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>


</div>